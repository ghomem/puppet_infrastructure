[Unit]
Description=Hashman
Wants=basic.target
After=basic.target network.target

[Service]
ExecStart=/usr/bin/gunicorn --bind 0.0.0.0:8080 wsgi --access-logfile <%= @logdir %>/gunicorn-receiver-access.log --error-logfile <%= @logdir %>/gunicorneceiver-error.log
KillMode=process
WorkingDirectory=<%= @hashmandir %>/httpserver

[Install]
WantedBy=multi-user.target
